{
  "functions": {
    "source": "functions",
    "runtime": "nodejs18",
    "platform": "gcfv2"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/*.js",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/javascript"
          }
        ]
      }
    ],
    "cleanUrls": true,
    "rewrites": [
      {
        "source": "/manager_dashboard.html",
        "destination": "/manager_dashboard.html"
      },
      {
        "source": "/**",
        "destination": "/404.html"  // This will show the 404 page for any unknown routes
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules"
  }
}
